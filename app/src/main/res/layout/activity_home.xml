<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Home"
        android:background="@drawable/bg_final"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        >

    <GridLayout


            android:layout_width="fill_parent" android:layout_height="fill_parent"
            >


        <LinearLayout
                android:layout_marginTop="45sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_row="0" android:layout_column="0">
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton"
                        android:background="@drawable/ac_button"

                        />

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textSize="12dp"
                          android:text="@string/audio_conferencia"
                          android:id="@+id/ac_text"
                        />
            </LinearLayout>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton5"
                        android:background="@drawable/cita_button"

                        />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textSize="14sp"
                          android:layout_gravity="center"
                          android:text="@string/appointments"
                          android:id="@+id/timeTracking"
                        />

            </LinearLayout>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_row="1"
                android:layout_column="0">

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton4"
                        android:background="@drawable/ls_button"
                        />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textSize="14sp"
                          android:text="@string/streaming"
                          android:id="@+id/ventas"
                        />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textSize="14sp"
                          android:text="@string/live"
                          android:textAlignment="center"
                          android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton6"
                        android:background="@drawable/not_button"
                        />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textSize="14sp"
                          android:text="@string/notifications"
                          android:id="@+id/notificationl"/>
            </LinearLayout>


            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_row="2"
                android:layout_column="0">
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageButton2"
                        android:background="@drawable/tt_button"
                        />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textSize="14sp"
                          android:text="TimeTracking"
                          android:id="@+id/mensajes"/>
            </LinearLayout>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageButton android:layout_width="100dp"
                         android:layout_height="100dp"
                         android:id="@+id/imageButton3"
                         android:background="@drawable/chat_button"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textSize="14sp"
                      android:text="Chat"
                      android:id="@+id/Chat"/>
        </LinearLayout>
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
        </LinearLayout>
    </GridLayout>
</ScrollView>

